{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFIles": [
          "server/prisma/schema/prisma",
          "server/prisma/migrations/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/src/(.*)",
      "dest": "/server/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
