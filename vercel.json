{
  "version": 2,
  "build": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/src/index.ts",
      "dest": "/server/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}